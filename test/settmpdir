# -*- mode: shell-script -*-

exname=$(basename $0)

src_file=../src/lib/libcommon.sh

prefix_cmd="
. /etc/shlib

source '$src_file'
"


##
## settmpdir
##

## no args

try "DEBUG=1; settmpdir; echo \$bash_TMPDIR"
is err "Temporary directory set up, variable \$bash_TMPDIR ready.
destructed tmp dir $(out).
"
is errlvl 0
[ -d "$(out)" ] && { echo "dir $(out) should not exist anymore." ; exit 1; }



try "settmpdir; [ -d \"\$bash_TMPDIR\" ] && echo 'found dir'" 'no args'
noerror
is out "found dir
"


test_value_pid="uniq-$$"
try "bash_TMPDIR=/tmp/test-$test_value_pid ; mkdir -p \$bash_TMPDIR; settmpdir ; echo \$bash_TMPDIR" \
    'tmpdir already existent.'
noerror
is out "/tmp/test-$test_value_pid
"
[ -d "$(out)" ] || { echo "dir $(out) should still be there." ; exit 1; }
rmdir "/tmp/test-$test_value_pid"



test_value_pid="uniq-$$"
try "DEBUG=1; bash_TMPDIR=/tmp/test-$test_value_pid; mkdir -p \$bash_TMPDIR; settmpdir ; echo \$bash_TMPDIR"
is err "Use given \$bash_TMPDIR variable (/tmp/test-$test_value_pid)
"
is errlvl 0
rmdir "/tmp/test-$test_value_pid"

## with args


try "DEBUG=1; settmpdir mytmpdir; echo \$mytmpdir"
is err "Temporary directory set up, variable \$mytmpdir ready.
destructed tmp dir $(out).
"
is errlvl 0
[ -d "$(out)" ] && { echo "dir $(out) should not exist anymore." ; exit 1; }


try "settmpdir mytmpdir; [ -d \"\$mytmpdir\" ] && echo 'found dir'"
noerror
is out "found dir
"


test_value_pid="uniq-$$-3"
try "mytmpdir=/tmp/test-$test_value_pid; mkdir -p \$mytmpdir; settmpdir mytmpdir; echo \$mytmpdir"
noerror
is out "/tmp/test-$test_value_pid
"
[ -d "$(out)" ] || { echo "dir $(out) should still be there." ; exit 1; }
rmdir "/tmp/test-$test_value_pid"


test_value_pid="uniq-$$-4"
try "DEBUG=1; mytmpdir=/tmp/test-$test_value_pid; mkdir -p \$mytmpdir; settmpdir mytmpdir; echo \$mytmpdir"
is err "Use given \$mytmpdir variable (/tmp/test-$test_value_pid)
"
is errlvl 0
rmdir "/tmp/test-$test_value_pid"
