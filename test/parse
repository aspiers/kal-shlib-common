# -*- mode: shell-script -*-

src_file="../src/lib/libparse.sh"

prefix_cmd="
. /etc/shlib

source '$src_file'
"


try 'next-0 < <(echo "hello"
                echo -en "\0")'
noerror
is out 'hello
'



try 'next-0 < <(echo "hello"
                echo "you"
                echo -en "\0")'
noerror
is out 'hello
you
'


try '{ next-0; echo x; next-0; } < <(echo "hello"
                echo -en "\0"
                echo "you"
                echo -en "\0")'
noerror
is out 'hello
x
you
'

try '
a=(1 2 3)

aexport a
export -f aimport array_deserialize

bash -c "aimport a; printf \" - \\\"%s\\\"\n\" \"\${a[@]}\""
' "can export/import simple valued array"

noerror
is out ' - "1"
 - "2"
 - "3"
'


try '
a=("1 2" 3)

aexport a
export -f aimport array_deserialize

bash -c "aimport a; printf \" - \\\"%s\\\"\n\" \"\${a[@]}\""
' "can export/import array with space contained values"

noerror
is out ' - "1 2"
 - "3"
'

try '
a=("1 & 2" ";" ");" "(")

aexport a
export -f aimport array_deserialize

bash -c "aimport a; printf \" - \\\"%s\\\"\n\" \"\${a[@]}\""
' "can export/import array with bash meaningfull chars"

noerror
is out ' - "1 & 2"
 - ";"
 - ");"
 - "("
'

